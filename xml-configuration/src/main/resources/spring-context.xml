<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="coffee" class="coffeeshop.Coffee">
        <constructor-arg value="Arabic"/>
    </bean>

    <bean id="milk" class="coffeeshop.Milk">
    </bean>

    <bean id="cream" class="coffeeshop.Cream">
    </bean>

    <bean id="milkCoffee" class="coffeeshop.MilkCoffee">
        <constructor-arg ref="coffee"/>
        <constructor-arg ref="milk"/>
    </bean>

    <bean id="coffeeService" class="coffeeshop.CoffeeService">
        <constructor-arg ref="coffee"/>
        <constructor-arg ref="milkCoffee"/>
    </bean>


</beans>